<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Maps.Confirmation">

    <Button
        android:id="@+id/confirmation_navigate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/Colour2"
        android:text="Navigate"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmation_recieved" />

    <Button
        android:id="@+id/confirmation_Review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="62dp"
        android:backgroundTint="@color/Colour2"
        android:text="Invalid"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/confirmation_recieved"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/confirmation_recieved"
        app:layout_constraintTop_toTopOf="@+id/confirmation_recieved" />

    <Button
        android:id="@+id/confirmation_recieved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginEnd="101dp"
        android:layout_marginBottom="75dp"
        android:backgroundTint="@color/Colour2"
        android:text="Recieved"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/confirmation_navigate"
        app:layout_constraintEnd_toStartOf="@+id/confirmation_Review"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmation_Code" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:height="100px"
        android:background="#DDFFBB"
        android:gravity="center"
        android:text="Confirmation"
        app:layout_constraintBottom_toTopOf="@+id/confirmation_Code"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/confirmation_Code"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="62dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="335dp"
        android:gravity="center"
        android:text="XYZ2"
        android:textSize="75sp"
        app:layout_constraintBottom_toTopOf="@+id/confirmation_recieved"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />
</androidx.constraintlayout.widget.ConstraintLayout>